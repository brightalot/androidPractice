<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="This is Main Activity!"
        android:layout_marginTop="50dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/sample_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_main"
            android:layout_marginBottom="50dp"
            android:ems="10"
            android:hint="아무거나 작성하세요"
            android:inputType="text"
            android:textAlignment="center" />

        <Button
            android:id="@+id/et_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/sample_edittext"
            android:layout_alignEnd="@+id/sample_edittext"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="입력" />

    </LinearLayout>
</RelativeLayout>
